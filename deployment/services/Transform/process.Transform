check process Transform with pidfile /kb/deployment/services/Transform/service.pid
  start program = "/kb/deployment/services/Transform/start_service" with timeout 60 seconds
  stop  program = "/kb/deployment/services/Transform/stop_service"
  if failed port 7778 type tcp 
     with timeout 15 seconds
     then restart
  if 3 restarts within 5 cycles then timeout
  group Transform_group
