check process idserver with pidfile /kb/deployment/services/idserver/service.pid
  start program = "/kb/deployment/services/idserver/start_service" with timeout 60 seconds
  stop  program = "/kb/deployment/services/idserver/stop_service"
  if failed port 7031 type tcp 
     with timeout 15 seconds
     then restart
  if 3 restarts within 5 cycles then timeout
  group idserver_group
